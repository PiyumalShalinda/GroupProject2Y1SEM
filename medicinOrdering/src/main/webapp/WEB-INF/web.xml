<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<!-- Servlet for Customer Insertion -->
	<servlet>
		<servlet-name>customerInsertServlet</servlet-name>
		<servlet-class>com.customer.customerInsertServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>customerInsertServlet</servlet-name>
		<url-pattern>/insert</url-pattern>
	</servlet-mapping>

	<!-- Servlet for Login -->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.customer.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!-- Servlet for Customer Update -->
	<servlet>
		<servlet-name>customerUpdateServlet</servlet-name>
		<servlet-class>com.customer.customerUpdateServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>customerUpdateServlet</servlet-name>
		<url-pattern>/updateServlet</url-pattern>
	</servlet-mapping>

	<!-- Servlet for Deleting Customer Profile -->
	<servlet>
		<servlet-name>DeleteCustomerServelet</servlet-name>
		<servlet-class>com.customer.DeleteCustomerServelet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DeleteCustomerServelet</servlet-name>
		<url-pattern>/DeleteCustomer</url-pattern>
	</servlet-mapping>


	


</web-app>
